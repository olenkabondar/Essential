<Window x:Class="_4Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4Task"
        mc:Ignorable="d"
        Title="Калькулятор MVP" Height="300" Width="500">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="FirstNumberBox" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="SecondNumberBox" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button x:Name="AddButton" Content="+" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <Button x:Name="SubtractButton" Content="−" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button x:Name="MultiplyButton" Content="×" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <Button x:Name="DivideButton" Content="÷" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock x:Name="ResultText" Grid.Row="4" Grid.ColumnSpan="2" Margin="5" FontSize="16" TextAlignment="Center"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Введіть перше число:" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center"/>
        <Label Grid.Row="0" Grid.Column="1" Content="Введіть друге число:" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center"/>
    </Grid>
</Window>
